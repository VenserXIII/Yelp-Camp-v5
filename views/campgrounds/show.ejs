<% include ../partials/header %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <a class="btn btn-success mt-3 w-100" href="/campgrounds">Back to campgrounds</a>

        </div>
        <div class="col-md-9">
            <div class="card mb-2">
                <figure class="figure">
                    <img class="figure-img img-fluid" src="<%= campground.image %>">
                    <figcaption class="figure-caption p-2">
                        <div class="row text-dark">
                            <div class="col-9">
                                <h4><a><%= campground.name %></a></h4>
                            </div>
                            <div class="col-3">
                                <h4 class="text-right">$9.00/night</h4>
                            </div>
                        </div>
                        <p class="mb-0"><%= campground.description %></p>
                    </figcaption>
                </figure>
            </div>
            <div class="card p-2 bg-light">
                <div class="text-right mt-3">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add comment</a>
                </div>
                <hr class="my-4">
                <% campground.comments.forEach((comment) => { %>
                    <div class="row">
                        <div class="col-md-9">
                            <strong><%= comment.author %></strong>
                        </div>
                        <div class="col-md-3 text-right">
                            <span>10 days ago</span>
                        </div>
                    </div>
                    <p><%= comment.text %></p>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
