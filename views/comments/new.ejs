<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center my-3">
        <h1 class="display-4">Add new comment to <%= campground.name %></h1>
    </div>
    <div class="row justify-content-center">
        <div class="card">
            <div class="card-body">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="form-group mb-2">
                        <label for="text">Text</label>
                        <input class="form-control" type="text" name="comment[text]" id="text">
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input class="form-control" type="text" name="comment[author]" id="author">
                    </div>
                    <button class="btn btn-primary btn-block">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
    </div>
</div>

<% include ../partials/footer %>
